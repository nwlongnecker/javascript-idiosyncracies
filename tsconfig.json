{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020", "DOM"],
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "src",

        "allowJs": true,
        "checkJs": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src/"],
    "references": []
}
